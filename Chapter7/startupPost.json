  {
    "description": "模拟一个没有参数的post请求",
    "request": {
      "uri": "/postdemo",
      "method": "post"
    },
    "response": {
      "text": "这是一个没有参数的post请求",
      "headers":{
        "Content-Type":"text/html;charset=gbk"
